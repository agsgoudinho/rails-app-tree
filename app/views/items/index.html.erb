
<h1>Items</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Done</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.description %></td>
        <td><%= item.done %></td>
        <td><%= link_to 'Show', item, class: 'btn btn-info' %>
        <%= link_to 'Edit', edit_item_path(item), class: 'btn btn-success' %>
        <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, class: 'btn btn-primary' %>
